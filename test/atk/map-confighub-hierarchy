#!/bin/bash
# Convenience wrapper - dispatches to Go TUI hierarchy explorer
# Same as: ./map confighub hierarchy

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

if command -v cub-scout &>/dev/null; then
    exec cub-scout hierarchy "$@"
elif [[ -x "${SCRIPT_DIR}/../../cub-scout" ]]; then
    exec "${SCRIPT_DIR}/../../cub-scout" hierarchy "$@"
else
    echo "cub-scout not found. Build with: go build -o cub-scout ./cmd/cub-scout/"
    exit 1
fi
